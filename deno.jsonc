{
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s",
    "fmt": "deno fmt .",
    "fmt:check": "deno fmt --check .",
    "lint": "deno lint"
  },
  "imports": {
    "lume/": "https://deno.land/x/lume@v2.2.4/",
    "blog/": "https://deno.land/x/lume_theme_simple_blog@v0.15.5/"
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ]
  }
}
